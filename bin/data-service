#!/usr/bin/env node
var program = require('gitlike-cli');

function listUsers() {
  require('./list-users.js');
}

function listSensors(args) {
  var run = require('./list-sensors.js');
  run(args.userUID);
}

function showUser(args) {
  var run = require('./show-user.js');
  run(args.uid);
}

program
  .command('list')
    .command('users')
      .description("List all users")
      .action(listUsers)
      .parent
    .command('sensors <userUID>')
      .description("List sensors for a user")
      .action(listSensors)
      .parent
    .command('datastreams').parent
    .parent

  .command('show')
    .command('user <UID>')
      .description("Show a user")
      .action(showUser)
      .parent
    .parent
  .parse(process.argv);

